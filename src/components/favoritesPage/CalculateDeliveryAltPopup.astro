<div class="alt-popup calculate-delivery-alt-popup" x-bind:class="{'active': calculateDeliveryAltPopup === true}" x-on:click.self="calculateDeliveryAltPopup = false">
    <form action="" method="post" class="calculate-delivery-alt-popup__form">
    <div class="alt-popup__content calculate-delivery-alt-popup__content">
     <div class="calculate-delivery-alt-popup__top-row">
        <p class="alt-popup__title calculate-delivery-alt-popup__title">Расчёт доставки</p>
        <button class="calculate-delivery-alt-popup__close-btn" type="button" x-on:click="calculateDeliveryAltPopup = false">
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M13 1L1 13M1 1L13 13" stroke="#161C2D" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>                
        </button>
     </div>
     <ul role="list" class="calculate-delivery-alt-popup__list" x-data="{cityInputValue: 'Улочки московские...', deliveryInputValue: 'Выбор транспортной компании...', deliveryWayRadioValue: 'terminal', pickUpPointInputValue: 'Выберите пункт выдачи...', totalSumInputValue: ''}">
        <li class="calculate-delivery-alt-popup__list-item" x-data="{toggleDropdown: false}">
            <p class="calculate-delivery-alt-popup__list-item-title">Город:*</p>
            <input type="text" disabled class="calculate-delivery-alt-popup__list-item-input" x-model="cityInputValue">
            <button type="button" class="calculate-delivery-alt-popup__edit-city-btn" x-on:click="toggleDropdown = !toggleDropdown">
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M10.9162 2.90847L15.0915 7.08372M1 17H5.17525L16.1353 6.03997C16.689 5.4863 17 4.73536 17 3.95235C17 3.16934 16.689 2.4184 16.1353 1.86472C15.5816 1.31105 14.8307 1 14.0477 1C13.2646 1 12.5137 1.31105 11.96 1.86472L1 12.8248V17Z" stroke="#859AB9" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>                    
            </button>
            <ul role="list" class="calculate-delivery-alt-popup__dropdown" x-bind:class="{'active': toggleDropdown === true}">
                <li class="calculate-delivery-alt-popup__dropdown-item">
                    <input type="text" class="calculate-delivery-alt-popup__dropdown-item-input" readonly x-on:click="cityInputValue = 'Улочки московские Шпанские, Таганские'; toggleDropdown = false" value="Улочки московские Шпанские, Таганские">
                </li>
                <li class="calculate-delivery-alt-popup__dropdown-item">
                    <input type="text" class="calculate-delivery-alt-popup__dropdown-item-input" readonly x-on:click="cityInputValue = 'Улочки бойкие Люблинские, Шпанские, Таганские, милые Мещанские'; toggleDropdown = false" value="Улочки бойкие Люблинские, Шпанские, Таганские, милые Мещанские">
                </li>
            </ul>
        </li>
        <li class="calculate-delivery-alt-popup__list-item" x-data="{toggleDropdown: false}">
            <p class="calculate-delivery-alt-popup__list-item-title">Доставка:</p>
            <input type="text" disabled class="calculate-delivery-alt-popup__list-item-input" x-model="deliveryInputValue">
            <button type="button" class="calculate-delivery-alt-popup__edit-delivery-btn" x-on:click="toggleDropdown = !toggleDropdown">
                <svg class="calculate-delivery-alt-popup__edit-delivery-btn-icon" x-bind:class="{'active': toggleDropdown === true}" width="10" height="18" viewBox="0 0 10 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M1 1L9 9L1 17" stroke="#161C2D" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>                                      
            </button>
            <ul role="list" class="calculate-delivery-alt-popup__dropdown" x-bind:class="{'active': toggleDropdown === true}">
                <li class="calculate-delivery-alt-popup__dropdown-item">
                    <input type="text" class="calculate-delivery-alt-popup__dropdown-item-input" readonly x-on:click="deliveryInputValue = 'СДЭК'; toggleDropdown = false" value="СДЭК">
                </li>
                <li class="calculate-delivery-alt-popup__dropdown-item">
                    <input type="text" class="calculate-delivery-alt-popup__dropdown-item-input" readonly x-on:click="deliveryInputValue = 'Деловые линии'; toggleDropdown = false" value="Деловые линии">
                </li>
            </ul>
        </li>
        <li class="calculate-delivery-alt-popup__list-item radio-list" x-show="deliveryInputValue === 'Деловые линии' || deliveryInputValue === 'СДЭК'">
            <ul role="list" class="calculate-delivery-alt-popup__radio-list">
                <li class="calculate-delivery-alt-popup__radio-list-item">
                    <input type="radio" id="terminal" class="calculate-delivery-alt-popup__radio-list-item-input" x-model="deliveryWayRadioValue" value="terminal">
                    <label for="terminal" class="calculate-delivery-alt-popup__radio-list-item-label">Самостоятельно с терминала</label>
                </li>
                <li class="calculate-delivery-alt-popup__radio-list-item">
                    <input type="radio" id="consignee" class="calculate-delivery-alt-popup__radio-list-item-input" x-model="deliveryWayRadioValue" value="consignee">
                    <label for="consignee" class="calculate-delivery-alt-popup__radio-list-item-label">До грузополучателя</label>
                </li>
            </ul>
        </li>
        <li class="calculate-delivery-alt-popup__list-item" x-data="{toggleDropdown: false}" x-show="(deliveryInputValue === 'Деловые линии' || deliveryInputValue === 'СДЭК') && deliveryWayRadioValue === 'terminal'">
            <p class="calculate-delivery-alt-popup__list-item-title">Пункт выдачи:</p>
            <input type="text" disabled class="calculate-delivery-alt-popup__list-item-input" x-model="pickUpPointInputValue">
            <button type="button" class="calculate-delivery-alt-popup__edit-pick-up-point-btn" x-on:click="toggleDropdown = !toggleDropdown">
                    <svg class="calculate-delivery-alt-popup__edit-pick-up-point-btn-icon" x-bind:class="{'active': toggleDropdown === true}" width="8" height="14" viewBox="0 0 8 14" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M1 1L7 7L1 13" stroke="#859AB9" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>                                       
            </button>
            <ul role="list" class="calculate-delivery-alt-popup__dropdown" x-bind:class="{'active': toggleDropdown === true}">
                <li class="calculate-delivery-alt-popup__dropdown-item">
                    <input type="text" class="calculate-delivery-alt-popup__dropdown-item-input" readonly x-on:click="pickUpPointInputValue = 'ул. Щорса, 128'; totalSumInputValue = 'от 15 000 руб.'; toggleDropdown = false" value="ул. Щорса, 128">
                </li>
                <li class="calculate-delivery-alt-popup__dropdown-item">
                    <input type="text" class="calculate-delivery-alt-popup__dropdown-item-input" readonly x-on:click="pickUpPointInputValue = 'ул. Щорса, 130'; totalSumInputValue = 'от 16 000 руб.'; toggleDropdown = false" value="ул. Щорса, 130">
                </li>
            </ul>
        </li>
        <li class="calculate-delivery-alt-popup__list-item" x-data="{toggleDropdown: false}" x-show="(deliveryInputValue === 'Деловые линии' || deliveryInputValue === 'СДЭК') && deliveryWayRadioValue === 'consignee'">
            <p class="calculate-delivery-alt-popup__list-item-title">Адрес</p>
            <input type="text" class="calculate-delivery-alt-popup__list-item-input" placeholder="Введите адрес">
        </li>
        <li class="calculate-delivery-alt-popup__list-item">
           <p class="calculate-delivery-alt-popup__list-item-title total-sum">Сумма:</p>
           <input type="text" readonly class="calculate-delivery-alt-popup__list-item-input" x-model="totalSumInputValue">
        </li>
     </ul>
</div>
</form>
</div>