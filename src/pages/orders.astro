---
import Layout from "../layouts/Layout.astro";
import Pagination from "../components/Pagination.astro";
import AddNewFilterPopup from "../components/AddNewFilterPopup.astro";
import Filter from "../components/Filter.astro";
import SearchForm from "../components/SearchForm.astro";
import OrdersTable from "../components/ordersPage/OrdersTable.astro";
import SearchBtn from "../components/SearchBtn.astro";
import SearchBtnDropdown from "../components/SearchBtnDropdown.astro";
---
<Layout title="страница заказы">
  <section class="site-section orders__site-section" x-data="{editOrderPopup: false,addNewFilterPopup: false, searchBtnDropdown: false}">
    <div class="site-section__top-row orders__top-row">
    <h2 class="site-section__title orders__title">Все заказы</h2>
    </div>
    <div class="site-section__body orders__body">
      <div class="site-section__body-top orders__body-top">
        <h3 class="site-section__subtitle orders__subtitle">
          Все заказы
        </h3>
      </div>
      <div class="site-section__body-bottom orders__body-bottom">
        <div class="site-section__body-bottom-left-group orders__body-bottom-left-group">
        <SearchBtn></SearchBtn>
        <SearchBtnDropdown></SearchBtnDropdown>
        <SearchForm></SearchForm>
        <Filter></Filter>
        </div>
        <div class="site-section__body-bottom-right-group orders__body-bottom-right-group">
          <button class="site-section__body-bottom-right-download-btn orders__body-bottom-right-download-btn" type="button">
            <svg width="18" height="19" viewBox="0 0 18 19" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 14V16C1 16.5304 1.21071 17.0391 1.58579 17.4142C1.96086 17.7893 2.46957 18 3 18H15C15.5304 18 16.0391 17.7893 16.4142 17.4142C16.7893 17.0391 17 16.5304 17 16V14M4 8L9 13M9 13L14 8M9 13V1" stroke="#869AB8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>              
          </button>
        </div>    
      </div>
      <OrdersTable></OrdersTable>
      <ul role="list" class="pagination orders__pagination">
      <Pagination></Pagination>
      </ul>
    </div>
    <AddNewFilterPopup></AddNewFilterPopup>
  </section>
</Layout>